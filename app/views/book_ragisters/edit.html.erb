<h1>Edit Book Ragister</h1>

<%= form_with(model:@book_ragister, local: true) do |form| %>
 

    <div class="field">
    <%= form.label :return_date %>
    <%= form.date_field :return_date %>
  </div><br>

  <div class="field">
    <%= form.label :book_name %><br>
    <%= form.collection_select :book_id, Book.all, :id, :book_name %><br>
  </div><br>
  <div class="field">
    <%= form.label :student_name %><br>
    <%= form.collection_select :student_id, Student.all, :id, :student_name %><br>
  </div><br>

  <div class="field">
    <%= form.label :library_name %><br>
    <%= form.collection_select :library_id, Library.all, :id, :library_name %><br>
  </div><br>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Show', @book_ragister %> |
<%= link_to 'Back', book_ragisters_path %>